{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "_headerDevices": {
                    "type": "header", 
                    "text": "Choose devices to watch",
                    "size": 1
                },
                "zigbeeDevices": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 3,
                    "label": "Zigbee"
                },
                "bleDevices": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 3,
                    "label": "Ble"
                },
                "sonoffDevices": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 3,
                    "label": "Sonoff"
                },
                "shellyDevices": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 3,
                    "label": "Shelly"
                },
                "_headerOtherSettings": {
                    "type": "header", 
                    "text": "Other Settings",
                    "size": 1
                },
                "trueState": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "label": "True State",
                    "help": "Use the true state from quality state"
                },
                "maxMinutes": {
                    "type": "number",
                    "min": 0,
                    "max": 100000,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "label": "Offline time of Devices",
                    "help": "in minutes"
                }
            }
        },
        "_notifications": {
            "type": "panel",
            "label": "Notifications",
            "items": {
                "_headerCommon": {
                    "type":"header",
                    "text":"Common Notification Settings",
                    "size": 1
                },
                "checkSendOfflineMsg": {
                    "type":"checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "label": "Send offline message",
                    "help": "Get message if an device is not reachable"
                },
                "trenner": {
                    "newLine": true,
                    "type": "divider"
                },
                "checkSendBatteryMsg": {
                    "newLine": "true",
                    "type":"checkbox",
                    "sm": 4,
                    "md": 4,
                    "lg": 4,
                    "label": "Send batterie message",
                    "help": "Get message if an device has low battery"
                },
                "minWarnBatterie": {
                    "type": "number",
                    "min": 0,
                    "max": 100,
                    "sm": 8,
                    "md": 6,
                    "lg": 4,
                    "label": "From how much min % would you get a message",
                    "help": "in percent"
                },
                "chooseDay": {
                    "sm": 8,
                    "md": 6,
                    "lg": 4,
                    "items": {
                        "checkMonday": {
                            "type": "checkbox",
                            "label": "Mo"
                        },
                        "checkTuesday": {
                            "type": "checkbox",
                            "label": "Tu"
                        },
                        "checkWednesday": {
                            "type": "checkbox",
                            "label": "We"
                        },
                        "checkThursday": {
                            "type": "checkbox",
                            "label": "Tue"
                        },"checkFriday": {
                            "type": "checkbox",
                            "label": "Fr"
                        },
                        "checkSaturday": {
                            "type": "checkbox",
                            "label": "Sa"
                        },
                        "checkSunday": {
                            "type": "checkbox",
                            "label": "Su"
                        }
                    }
                },
                "_headerPushover": {
                    "newLine": true,
                    "type": "header", 
                    "text": "Pushover",
                    "size": 1
                },
                "instancePushover": {
                    "newLine": true,
                    "type": "instance",
                    "adapter": "pushover",
                    "all": true,
                    "allowDeactivate": true,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Pushover Instanz",
                    "help": "Please choose the pushover instance"
                },
                "devicePushover": {
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Device-ID (optional)",
                    "help": "Choose your device"
                },
                "titlePushover": {
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Title (optional)",
                    "help": "Choose your title for Pushmessage"
                },
                "headerTelegram": {
                    "newLine": "true",
                    "type": "header", 
                    "text": "Telegram",
                    "size": 1
                },
                "instanceTelegram": {
                    "newLine": true,
                    "type": "instance",
                    "adapter": "telegram",
                    "all": true,
                    "allowDeactivate": true,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Telegram Instanz",
                    "help": "Please choose the telegram instance"
                },
                "deviceTelegram": {
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Device-ID (optional)",
                    "help": "Choose your device"
                },
                "headerJarvis": {
                    "newLine": "true",
                    "type": "header", 
                    "text": "Jarvis Notification",
                    "size": 1
                },
                "instanceJarvis": {
                    "newLine": true,
                    "type": "instance",
                    "adapter": "jarvis",
                    "allowDeactivate": true,
                    "all": true,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Jarvis Instanz",
                    "help": "Please choose the jarvis instance"
                },
                "titleJarvis": {
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Title (optional)",
                    "help": "Choose your title for Pushmessage"
                }
            } 
        },
        "_blacklist": {
            "type": "panel",
            "label": "Blacklist",
            "items": {
                "tableBlacklist": {
                    "type": "table",
                    "label": "Blacklist",
                    "nodelete": true,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "items": [{
                        "type": "objectId",
                        "width":"100%",
                        "title": "Choose which devices should be excluded", 
                        "attr": "device", 
                        "filter": false, 
                        "sort": false,
                        "default": ""
                    }]
                }
            }
        }
    }
}